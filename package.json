{
  "name": "@jameslnewell/configs",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@babel/core": "^7.5.5",
    "eslint": "^6.2.2",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "publish-if-not-published": "^1.0.2",
    "typescript": "^3.6.2"
  },
  "scripts": {
    "lint": "eslint --ext .ts .",
    "publish": "lerna exec publish-if-not-published -- --access=public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "MIT"
}
