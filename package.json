{
  "name": "@jameslnewell/configs",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "husky": "^1.1.4",
    "lerna": "^3.4.3",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2",
    "publish-if-not-published": "^1.0.2"
  },
  "scripts": {
    "publish": "lerna exec publish-if-not-published --"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "MIT"
}
