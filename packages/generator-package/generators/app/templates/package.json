{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "<%= description %>",
  "files": [
    "lib"
  ],
  "main": "lib/index",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@jameslnewell/babel-preset": "^1.0.1",
    "@jameslnewell/editor-config": "^1.0.1",
    "@jameslnewell/eslint-config": "^0.5.0",
    "@jameslnewell/jest-preset-lint": "^1.1.0",
    "@jameslnewell/jest-preset-test": "^3.0.0",
    "@jameslnewell/jest-preset-type": "^1.0.1",
    "@jameslnewell/prettier-config": "^1.0.1",
    "@jameslnewell/typescript-config": "^3.0.0",
    "@types/jest": "^24.0.13",
    "eslint": "^5.16.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "rollup": "^1.14.0",
    "typescript": "^3.5.1"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "check:lint": "eslint --fix --ext .ts,.js,.jsx src",
    "check:types": "tsc --noEmit --project tsconfig.json",
    "check": "yarn run check:lint && yarn run check:types",
    "build:types": "tsc --project tsconfig.types.json",
    "build:bundles": "rollup -c rollup.config.js",
    "build": "yarn run build:types && yarn run build:bundles",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "MIT"
}
