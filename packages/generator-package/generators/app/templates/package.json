{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "<%= description %>",
  "files": [
    "dist"
  ],
  "source": "src/index.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@jameslnewell/editor-config": "^1.0.1",
    "@jameslnewell/eslint-config": "^0.12.0",
    "@jameslnewell/jest-preset": "^2.0.0",
    "@jameslnewell/prettier-config": "^1.0.1",
    "@jameslnewell/typescript-config": "^3.0.0",
    "@types/jest": "^24.0.18",
    "eslint": "^6.3.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "microbundle": "^0.11.0",
    "prettier": "^1.18.2",
    "typescript": "^3.6.2"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "check:lint": "eslint --fix --ext .ts,.js,.jsx src",
    "check:types": "tsc --noEmit --project tsconfig.json",
    "check": "yarn run check:lint && yarn run check:types",
    "build": "microbundle build",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "MIT"
}
